@model FitnessBookingSystem.Models.Trainer

@{
    ViewData["Title"] = "Edit Trainer";
}

<h1>Edit Trainer</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="TrainerId" />
            <input type="hidden" asp-for="CreatedAt" /> <!-- Запази CreatedAt -->

            <div class="form-group mb-2">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Specialization"></label>
                <input asp-for="Specialization" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="ExperienceYears"></label>
                <input asp-for="ExperienceYears" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label>Upload New Photo</label>
                <input type="file" name="Photo" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
        </form>
    </div>

    <div class="col-md-4">
        <h5>Current Photo</h5>
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" class="img-fluid" style="max-width:100%; border:1px solid #ccc; padding:5px;" />
        }
        else
        {
            <p>No photo uploaded</p>
        }
    </div>
</div>


