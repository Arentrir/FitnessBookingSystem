@model FitnessBookingSystem.Models.EditRolesViewModel


<h2>Edit Roles for @Model.Email</h2>

<form method="post">
    <input type="hidden" asp-for="UserId" />

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check">
            <input class="form-check-input" asp-for="Roles[i].IsSelected" />
            <label class="form-check-label" asp-for="Roles[i].IsSelected">
                @Model.Roles[i].RoleName
            </label>
            <input type="hidden" asp-for="Roles[i].RoleName" />
        </div>
    }

    <button class="btn btn-success mt-3" type="submit">Save Changes</button>
</form>
