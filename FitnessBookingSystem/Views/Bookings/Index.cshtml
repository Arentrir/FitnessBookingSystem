@model PaginatedList<FitnessBookingSystem.Models.Booking>

@{
    ViewData["BodyClass"] = "bookings-bg";
}


<h1>Bookings</h1>

@if (User.IsInRole("User") || User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}


<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" 
               name="searchString" 
               value="@ViewData["CurrentFilter"]" 
               placeholder="Search by Class or User" 
               class="form-control" />
        <button type="submit" class="btn btn-success">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ClassSortParm"]">Class</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["UserSortParm"]">User Email</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">Booking Date</a>
            </th>
            <th>Approved</th>
            <th>Start Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Class?.Title</td>
                <td>@item.UserEmail</td>
                <td>@item.BookingDate</td>
                <td>@item.IsApproved</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info btn-sm">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm mx-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@i</a>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Next</a>
            </li>
        }
    </ul>
</nav>


